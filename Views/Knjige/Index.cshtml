@model PaginatedList<KnjigoMenjava.Models.Knjiga>

@{
    ViewData["Title"] = "Seznam knjig";
}

@using System.Security.Claims

<h1>Seznam knjig</h1>

<p>
    <a asp-action="Create">Objavi Knjigo</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <label>Isči: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" /></label>
            <input type="submit" value="POIŠČI" class="btn btn-default" />
            <a asp-action="Index">Nazaj na seznam</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.FirstOrDefault().Naslov)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Avtor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Opis)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.FirstOrDefault().DatumDodajanja)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Kategorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Lastnik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Avtor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumDodajanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastnik.UserName)
            </td>
            <td>
                <form asp-action="Rezerviraj" asp-route-id="@item.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-primary btn-sm">Rezerviraj</button>
                </form> |
                <a asp-controller="Ocene" asp-action="Index" asp-route-knjigaId="@item.Id">Ocene</a> |
                @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == item.LastnikId || User.IsInRole("Administrator"))
                {
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Izbrisi</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
