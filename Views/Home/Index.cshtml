@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<KnjigoMenjava.Models.Knjiga>

<div class="text-center mb-5">
    <h1 class="display-4">Dobrodošli v KnjigoMenjava</h1>
    <p class="lead">KnjigoMenjava je platforma za ljubitelje izmenjave knjig.</p>
</div>

<div class="container">
    <h3 class="mb-4">Zadnje dodane knjige</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Naslov</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Avtor</h6>
                        <p class="card-text text-truncate">@item.Opis</p>
                        <a asp-controller="Knjige" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Podrobnosti</a>
                    </div>
                    <div class="card-footer text-muted font-italic">
                        Dodano: @item.DatumDodajanja.ToString("dd.MM.yyyy")
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-3">
        <a asp-controller="Knjige" asp-action="Index" class="btn btn-primary">Poglej vse knjige</a>
    </div>
</div>